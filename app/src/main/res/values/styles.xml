<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Estilo base para toda la aplicación -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Configuración general de colores (se sobreescriben en themes.xml) -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="android:windowBackground">@color/colorBackground</item>

        <!-- Tipografía general -->
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/textPrimary</item>

        <!-- Espaciado y dimensiones comunes -->
        <item name="android:padding">16dp</item>
    </style>

    <!-- Estilo para botones primarios -->
    <style name="Button.Primary" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorOnPrimary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:paddingHorizontal">24dp</item>
        <item name="android:paddingVertical">12dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
    </style>

    <!-- Estilo para botones secundarios -->
    <style name="Button.Secondary" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/colorSecondary</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:textColor">@color/colorSecondary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:paddingHorizontal">24dp</item>
        <item name="android:paddingVertical">12dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
    </style>

    <!-- Estilo para títulos principales -->
    <style name="Text.Headline" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <!-- Estilo para textos secundarios o subtítulos -->
    <style name="Text.Subtitle" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">@color/textSecondary</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <!-- Estilo para textos de ayuda o hint -->
    <style name="Text.Hint" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/textDisabled</item>
        <item name="android:fontFamily">@font/roboto_italic</item>
    </style>

    <!-- Estilo para cajas de texto (TextInputLayout) -->
    <style name="Input.OutlinedBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/input_box_stroke</item>
        <item name="boxBackgroundColor">@color/input_box_background</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
    </style>

    <!-- Estilo para caja de texto con desplegable (Dropdown) -->
    <style name="Input.OutlinedBox.Dropdown" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxStrokeColor">@color/input_box_stroke</item>
        <item name="boxBackgroundColor">@color/input_box_background</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
    </style>

    <!-- Estilo para Floating Action Button -->
    <style name="Widget.App.FAB" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="backgroundTint">@color/fab_background</item>
        <item name="tint">@color/fab_icon_tint</item>
        <item name="elevation">6dp</item>
        <item name="android:padding">12dp</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Material3.SmallComponent</item>
        <item name="android:layout_margin">16dp</item>
        <item name="cornerRadius">8dp</item>
        <item name="srcCompat">@drawable/ic_add</item>
    </style>

</resources>
